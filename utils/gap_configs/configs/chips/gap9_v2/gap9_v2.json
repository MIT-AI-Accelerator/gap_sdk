{
  "config_type": "generator",
  "@generator@": "generators/v1/config_gen",
  "chip_gen": "generators.v1.gap9_v2_chip_gen",

  "board": {
    "devices": {
      "spiflash": {
        "@includes@": ["devices/spiflash_s26ks512.json"],
        "interface": "spim1",
        "cs": 0
      },
      "spiram": {
        "@include@" : "devices/spiram.json",
        "interface": "spim0",
        "cs": 0
      },
      "flash": {
        "@include@" : "devices/hyperflash.json",
        "cs": 1
      },
      "ram": {
        "@include@" : "devices/hyperram.json",
        "cs": 0,
        "size": "0x004000000"
      },
      "camera": {
        "@include@": "devices/camera.json",
        "interface": "cpi0",
        "ctrl_interface": "i2c1"
      },
      "jtag_proxy": {
        "@includes@": ["devices/jtag_proxy.json"]
      },
      "mram": {
          "@include@": "ips/mram/mram.json"
      }
    },

    "@cond@": {
      "@os.environ.get('GVSOC_TESTBENCH') is None@": {
        "components": {
          "i2c0_bus": {
            "@includes@": ["devices/i2c/bus.json"]
          },
          "mic0": {
            "@includes@": ["devices/microphone.json"]
          },
          "uart": {
            "@includes@": ["devices/uart_checker.json"]
          }
        },

        "bindings": [
          [ "mic0.i2s", "chip.i2s0" ],
          [ "chip.uart0", "uart.input" ],
          [ "chip.i2c0", "i2c0_bus.input" ]
        ]
      },

      "@os.environ.get('GVSOC_TESTBENCH') is not None@": {
        "components": {
          "testbench": {
            "@includes@": ["devices/testbench.json"]
          }
        },
        "bindings": [
          [ "chip.uart0", "testbench.uart0" ],
          [ "chip.uart1", "testbench.uart1" ],
          [ "chip.uart2", "testbench.uart2" ],
          [ "chip.uart3", "testbench.uart3" ],
          [ "chip.uart4", "testbench.uart4" ],

          [ "testbench.i2s0", "chip.i2s0" ],
          [ "testbench.i2s1", "chip.i2s1" ],
          [ "testbench.i2s2", "chip.i2s2" ]
        ]
      }
    }
  },

  "chip": "gap9_v2",
  "chip_family": "gap9_v2",

  "has_fast_clock": true,

  "rt": {
    "config": {
      "bsp": true
    }
  },

  "padframe": {
    "content": "chips/gap9_v2/padframe.json"
  },

  "runner": {
    "config": {
      "boot-mode": "rom_spim",
      "flash_type": "spi",
      "default_profile": "spi",
      "peripherals": "true"
    }
  },

  "cluster": {
    "generator": "generators.v1.gap9_v2_cluster_gen",
    "base": "0x10000000",
    "alias": "0x00000000",
    "size": "0x00400000",

    "core_config": {
      "vp_component": "gap9/cpu/iss/iss_gap9_cluster",
      "isa"           : "rv32imfcXpulpv2Xf8Xf16XfvecXfauxXf16altXgap9Xint64",
      "misa": "0x40000000",
      "first_external_pcer": 12,
      "riscv_dbg_unit": true,
      "debug_binaries": [],
      "debug_handler" : "0x1a190800",
      "power_models": {
        "@includes@": [
          "power_models/core/riscy.json"
        ]
      }
    },

    "version": 5,
    "json_file": "cluster_v6",
    "nb_cluster": 1,
    "nb_pe": 9,
    "has_cc": true,

    "pe": {
      "irq": [
        null       , null       , null         , null,
        null       , null       , null         , null,
        "dma_0"    , "dma_1"    , "timer_0"    , "timer_1",
        "acc_0"    , "acc_1"    , "acc_2"      , "acc_3",
        "eu_bar"   , "eu_mutex" , "eu_dispatch", null,
        null       , null       , "dma_ext"    , null,
        null       , null       , null         , null,
        "mpu_error", null       , "soc_event"  , "soc_fifo"
      ]
    },

    "l1": {
      "base": "0x10000000",
      "size": "0x00020000",
      "banking_factor": 2
    },

    "icache": {
      "config": {
        "nb_sets_bits": 6,
        "nb_ways_bits": 2,
        "line_size_bits": 4
      }
    },

    "peripherals": {

      "base": "0x10200000",
      "size": "0x00200000",

      "alias": {
        "base": "0x00200000",
        "size": "0x00200000"
      },

      "cluster_ctrl": {
        "base": "0x10200000",
        "size": "0x00000400"
      },

      "timer": {
        "base": "0x10200400",
        "size": "0x00000400"
      },

      "event_unit": {
        "version": "4",
        "base": "0x10200800",
        "size": "0x00000800",
        "config": {
          "properties": {
            "barriers": {
              "nb_barriers": 9
            }
          }
        }
      },

      "ne16": {
        "base": "0x10201000",
        "size": "0x00000400"
      },

      "icache_ctrl": {
        "base": "0x10201400",
        "size": "0x00000400"
      },

      "dma": {
        "version": 7,
        "base": "0x10201800",
        "size": "0x00000400"
      },

      "dbg_unit": {
        "base": "0x10300000",
        "size"  : "0x00008000"
      },

      "cluster_ico": {}
    },

    "demux_peripherals":
    {
      "base": "0x10204000",

      "event_unit": {
        "base": "0x10204000",
        "size": "0x00000800"
      },
      "dma": {
        "base": "0x10204800",
        "size": "0x00000400"
      }
    }
  },

  "soc": {
    "generator": "generators.v1.gap9_v2_soc_gen",

    "base": "0x1A000000",
    "size": "0x06000000",

    "fc": {
      "core_config": {
        "vp_component": "gap9/cpu/iss/iss_gap9_fc",
        "isa"           : "rv32imfcXpulpv2Xf8Xf16XfvecXfauxXf16altXgap9Xint64",
        "misa": "0x40000000",
        "first_external_pcer": 12,
        "riscv_dbg_unit": true,
        "debug_binaries": [],
        "debug_handler" : "0x1a190800",
        "power_models": {
          "@includes@": [
            "power_models/core/riscy.json"
          ]
        }
      },

      "cluster_id"  : 0,
      "core_id"     : 9,
      "fetch_enable": true,
      "boot_addr"   : "0x1A000080",
      "riscv_fesvr_tohost_addr": null
    },

    "rom": {
      "version": 2,
      "base": "0x1A000000",
      "size": "0x00002000",
      "config": {
        "@eval@": {
          "binary": "os.path.join(os.environ.get('TARGET_INSTALL_DIR'), 'bin', 'boot-gap9_v2')",
          "stim_file": "os.path.join(os.environ.get('INSTALL_DIR'), 'python', 'pulp', 'chips', 'gap9_v2', 'rom.bin')"
        }
      }
    },

    "gdbserver": {
      "config": {
        "enabled": false,
        "port": 11111
      }
    },

    "pulp_tap": {
      "config": {
        "@includes@": ["ips/debug/pulp_tap.json"],
        "confreg_instr": 6,
        "confreg_length": 8,
        "idcode": "0x20021BCB"
      }
    },

    "riscv_tap": {
      "riscv_debug": true,
      "config": {
        "@includes@": ["ips/debug/riscv_dtm.json"],
        "nb_harts": 16,
        "idcode": "0x20020BCB"
      }
    },

    "taps": [ "pulp_tap", "riscv_tap" ],

    "l2": {
      "base": "0x1C000000",
      "size": "0x00190000",
      "is_partitioned": true,

      "priv0": {
        "base"         : "0x1C000000",
        "size"         : "0x00008000"
      },

      "priv0_alias": {
        "base"         : "0x00000000",
        "size"         : "0x00008000"
      },

      "priv1": {
        "base"         : "0x1C008000",
        "size"         : "0x00008000"
      },

      "shared": {
        "nb_banks"          : 4,
        "nb_regions"        : 12,
        "interleaving_bits" : 2,
        "base"         : "0x1C010000",
        "size"         : "0x00180000"
      },
      "xip": {
        "base"         : "0x20000000",
        "size"         : "0x10000000"
      }
    },

    "peripherals": {

      "base": "0x1A100000",
      "size": "0x00100000",

      "flls": {
        "fll": {
          "version"      : 2,
          "base"         : "0x1A100000",
          "size"         : "0x00001000",
          "clocks"       : [ "periph", "soc", "cluster", "sfu" ]
        }
      },

      "fll_ctrl": {
        "version"      : 3
      },

      "gpio": {
        "version"      : 3,
        "base"         : "0x1A101000",
        "size"         : "0x00001000"
      },

      "udma": {
        "content"      : "chips/gap9_v2/udma.json",
        "base"         : "0x1A102000",
        "size"         : "0x00002000"
      },

      "apb_soc_ctrl": {
        "base"         : "0x1A104000",
        "size"         : "0x00001000",
        "has_jtag_reg" : true,
        "config": {
          "nb_harts": 10,
          "nb_l2_shared_banks": 12
        }
      },

      "soc_eu": {
        "version"      : 3,
        "base"         : "0x1A106000",
        "size"         : "0x00001000"
      },

      "pmu": {
        "content"      : "chips/gap9_v2/pmu.json",
        "version"      : 4,
        "base"         : "0x1A107000",
        "size"         : "0x00000800"
      },

      "rtc": {
        "base"         : "0x1A108000",
        "size"         : "0x00000800",
        "config": {
          "apb_irq_soc_event": 140,
          "irq_soc_event"    : 141,
          "calendar_time"    : "0x00124808",
          "calendar_date"    : "0x00171228"
        }
      },

      "efuse": {
        "version"      : 1,
        "base"         : "0x1A10F000",
        "size"         : "0x00001000",
        "config": {
          "format": "binary",
          "nb_regs"   : 512
        }
      },

      "fc_itc": {
        "version"      : 1,
        "base"         : "0x1A109000",
        "size"         : "0x00001000",
        "irq": {
          "evt_sw_event0"       : 0,
          "evt_sw_event2"       : 2,
          "evt_sw_event1"       : 1,
          "evt_sw_event3"       : 3,
          "evt_sw_event4"       : 4,
          "evt_sw_event5"       : 5,
          "evt_sw_event6"       : 6,
          "evt_sw_event7"       : 7,

          "evt_timer0"          : 10,
          "evt_timer1"          : 11,

          "evt_timer1_0"        : 11,
          "evt_timer1_1"        : 12,

          "udma.sfu_irq"        : 14,

          "evt_gpio"            : 15,

          "evt_clkref"          : 16,

          "evt_adv_timer0"      : 17,
          "evt_adv_timer1"      : 18,
          "evt_adv_timer2"      : 19,
          "evt_adv_timer3"      : 20,

          "evt_rtc_apb"         : 21,
          "evt_rtc"             : 22,

          "evt_picl_ok"         : 24,
          "evt_scu_ok"          : 25,

          "evt_soc_evt"         : 26,
          "evt_queue_error"     : 29,

          "udma.hyper0_irq"     : 30,
          "udma.hyper1_irq"    : 31
        }
      },

      "xip": {
        "version"      : 1,
        "base"         : "0x1A150000",
        "size"         : "0x00010000"
      },

      "fc_timer": {
        "version"      : 2,
        "base"         : "0x1A10B000",
        "size"         : "0x00000800"
      },

      "fc_timer_1": {
        "version"      : 2,
        "base"         : "0x1A10B800",
        "size"         : "0x00000800"
      },

      "fc_icache": {
        "version"      : 2,
        "base"         : "0x1A108800",
        "config": {
          "nb_sets_bits": 5,
          "nb_ways_bits": 2,
          "line_size_bits": 4
        }
      },

      "stdout": {
        "version"      : 3,
        "base"         : "0x1A120000",
        "size"         : "0x00001000"
      },

      "fc_dbg_unit": {
        "version"      : 3,
        "base"         : "0x1A190000",
        "size"         : "0x00000800"
      },

      "debug_rom": {
        "version": 2,
        "base": "0x1A190800",
        "size": "0x00000800",
        "config": {
          "@eval@": {
            "stim_file": "os.path.join(os.environ.get('INSTALL_DIR'), 'python', 'pulp', 'chips', 'gap9_v2', 'debug_rom.bin')"
          }
        }
      }


    }
  },
  "soc_events": {
    "soc_evt_spim0_rx"        : 0,
    "soc_evt_spim0_tx"        : 1,
    "soc_evt_spim1_rx"        : 2,
    "soc_evt_spim1_tx"        : 3,
    "soc_evt_hyper0_rx"       : 4,
    "soc_evt_hyper0_tx"       : 5,
    "soc_evt_uart0_rx"        : 6,
    "soc_evt_uart0_tx"        : 7,
    "soc_evt_i2c0_rx"         : 8,
    "soc_evt_i2c0_tx"         : 9,
    "soc_evt_i2c1_rx"         : 10,
    "soc_evt_i2c1_tx"         : 11,
    "soc_evt_i2s_ch0"         : 12,
    "soc_evt_i2s_ch1"         : 13,
    "soc_evt_cam0"            : 14,
    "soc_evt_spim0_eot"       : 22,
    "soc_evt_l2l2_eot"        : 23,
    "soc_evt_uart_eot"        : 25,
    "soc_evt_i2c0_extra"      : 26,
    "soc_evt_i2c1_extra"      : 27,
    "soc_evt_i2s_extra"       : 28,
    "soc_evt_cam0_eot"        : 29,
    "soc_evt_cluster_pok"     : 31,
    "soc_evt_cluster_not_busy": 34,
    "soc_evt_cluster_cg_ok"   : 35,
    "soc_evt_picl_ok"         : 36,
    "soc_evt_scu_ok"          : 37,
    "soc_evt_adv_timer0"      : 38,
    "soc_evt_adv_timer1"      : 39,
    "soc_evt_adv_timer2"      : 40,
    "soc_evt_adv_timer3"      : 41,
    "soc_evt_gpio"            : 42,
    "soc_evt_rtc_apb"         : 43,
    "soc_evt_rtc"             : 44,
    "soc_evt_ref_clock"       : 168,

    "soc_evt_sw_first"        : 48,
    "soc_evt_sw_nb"           : 8,

    "soc_evt_pmu0"            : 31
  }
}
